/**app.wxss**/
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

/* 通用样式 */
.container {
  padding: 30rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  background: #fff;
  color: #667eea;
  border: 4rpx solid #667eea;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
}

/* 表单输入框 */
.form-input {
  background: #fff;
  border: 2rpx solid #e8e8e8;
  border-radius: 24rpx;
  height: 96rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.form-input-focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

/* 文本颜色 */
.text-primary {
  color: #667eea;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #fa8c16;
}

.text-danger {
  color: #ff4d4f;
}

.text-muted {
  color: #999;
}

/* 居中 */
.text-center {
  text-align: center;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

