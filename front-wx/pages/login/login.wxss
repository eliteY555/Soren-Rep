/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 40rpx 60rpx;
  position: relative;
}

/* 安全区域 - 避开刘海屏 */
.safe-area-top {
  height: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 20rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 40rpx;
  display: block;
  border-radius: 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.25);
  background: #fff;
  padding: 10rpx;
}

.app-name {
  font-size: 52rpx;
  color: #fff;
  font-weight: 700;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 400;
  letter-spacing: 1rpx;
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50rpx;
  padding: 6rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx 20rpx;
  color: rgba(255, 255, 255, 0.85);
  font-size: 28rpx;
  border-radius: 44rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.tab-icon {
  font-size: 36rpx;
  transition: transform 0.3s;
}

.tab-text {
  font-weight: 500;
}

.tab-item.active {
  background: #fff;
  color: #667eea;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

/* 登录表单 */
.login-form {
  background: #fff;
  border-radius: 36rpx;
  padding: 56rpx 44rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.login-form::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 36rpx 36rpx 0 0;
}

/* 表单组 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.form-input {
  width: 100%;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 0 28rpx;
  height: 88rpx;
  line-height: normal;
  font-size: 30rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
  color: #333;
  font-weight: 500;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.input-placeholder {
  color: #bbb;
  font-weight: 400;
}

/* 密码输入框容器 */
.password-wrapper {
  position: relative;
}

.password-wrapper .form-input {
  padding-right: 80rpx;
}

.password-wrapper .eye-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  transition: all 0.3s;
  border-radius: 12rpx;
}

.password-wrapper .eye-icon:active {
  background: rgba(102, 126, 234, 0.1);
  transform: translateY(-50%) scale(0.95);
}

/* 验证码输入框容器 */
.code-wrapper {
  position: relative;
  display: flex;
  align-items: stretch;
  gap: 12rpx;
}

.code-wrapper .form-input {
  flex: 1;
}

.code-wrapper .btn-code {
  height: 88rpx;
  line-height: 1;
  padding: 0 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
  flex-shrink: 0;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 140rpx;
}

.code-wrapper .btn-code:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.code-wrapper .btn-code[disabled] {
  background: linear-gradient(135deg, #e8e8e8 0%, #d8d8d8 100%);
  color: #999;
  box-shadow: none;
}

.btn-login {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 700;
  margin-top: 40rpx;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.5);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.btn-login::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.btn-login:active::before {
  left: 100%;
}

.btn-login:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.btn-content {
  position: relative;
  z-index: 1;
  letter-spacing: 4rpx;
}

.register-link {
  text-align: center;
  margin-top: 36rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.hint-text {
  color: #999;
}

.link {
  color: #667eea;
  font-weight: 700;
  position: relative;
  padding-bottom: 2rpx;
}

.link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: #667eea;
  transform: scaleX(0);
  transition: transform 0.3s;
}

.link:active::after {
  transform: scaleX(1);
}

.hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 28rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #d46b08;
  border-left: 4rpx solid #fa8c16;
}

.hint-icon {
  font-size: 32rpx;
}

/* 注册弹窗 */
.register-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.65);
  backdrop-filter: blur(8rpx);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 640rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 36rpx;
  overflow: hidden;
  box-shadow: 0 24rpx 80rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 44rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 1rpx;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  border-radius: 50%;
  transition: all 0.3s;
}

.modal-close:active {
  background: #f5f5f5;
  color: #666;
}

.modal-body {
  padding: 36rpx 44rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 注册弹窗内的表单项复用登录表单样式 */

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 36rpx 44rpx;
  border-top: 2rpx solid #f0f0f0;
  background: #fafafa;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
  border: 3rpx solid #e8e8e8;
}

.btn-cancel:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}
