/* pages/profile/settings.wxss */
.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 40rpx;
}

.form-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item-clickable {
  cursor: pointer;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
  padding: 0 16rpx;
}

.form-picker {
  flex: 1;
  text-align: right;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  padding: 0 16rpx;
}

.form-value-readonly {
  flex: 1;
  font-size: 28rpx;
  color: #999;
  text-align: right;
  padding: 0 16rpx;
}

.form-value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.form-value-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 16rpx;
}

.form-arrow {
  font-size: 40rpx;
  color: #ccc;
}

.btn-group {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.btn-primary {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  color: #667eea;
  border: 4rpx solid #667eea;
  border-radius: 48rpx;
  font-size: 32rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

