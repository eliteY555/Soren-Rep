<!--pages/profile/change-password.wxml-->
<view class="container">
  <view class="page-title">修改密码</view>
  
  <form bindsubmit="handleSubmit">
    <view class="form-section">
      <view class="form-item">
        <view class="form-label">旧密码</view>
        <input class="form-input" name="oldPassword" type="password" password placeholder="请输入旧密码" />
      </view>
      
      <view class="form-item">
        <view class="form-label">新密码</view>
        <input class="form-input" name="newPassword" type="password" password placeholder="请输入新密码（6-20位）" />
      </view>
      
      <view class="form-item">
        <view class="form-label">确认密码</view>
        <input class="form-input" name="confirmPassword" type="password" password placeholder="请再次输入新密码" />
      </view>
    </view>

    <view class="tips-box">
      <view class="tips-title">密码要求：</view>
      <view class="tips-item">• 长度为 6-20 个字符</view>
      <view class="tips-item">• 建议包含字母和数字组合</view>
    </view>

    <button class="btn-submit" formType="submit">确认修改</button>
  </form>
</view>

