/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  padding: 30rpx;
  padding-bottom: 100rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #666;
  font-weight: 600;
  margin: 40rpx 0 24rpx 0;
  padding-left: 8rpx;
}

.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx 48rpx;
  color: #fff;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.25);
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.user-greeting {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
}

.user-phone {
  font-size: 28rpx;
  opacity: 0.95;
  font-weight: 400;
  position: relative;
  z-index: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 60rpx;
  margin-right: 32rpx;
  position: relative;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  cursor: pointer;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
}

.avatar-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.avatar-text {
  font-size: 18rpx;
  color: #999;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.menu-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.menu-icon.user-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.menu-icon.pwd-icon {
  background: linear-gradient(135deg, #fa8c16 0%, #faad14 100%);
}

.menu-icon.help-icon {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
}

.menu-icon.info-icon {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.menu-arrow {
  font-size: 40rpx;
  color: #ccc;
}

.btn-logout {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  padding: 0;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 77, 79, 0.3);
  transition: all 0.2s;
}

.btn-logout:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.4);
}

