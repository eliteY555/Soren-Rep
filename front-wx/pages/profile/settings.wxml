<!--pages/profile/settings.wxml-->
<view class="container">
  <view class="page-title">账号设置</view>
  
  <form bindsubmit="handleSubmit">
    <view class="form-section">
      <view class="section-title">个人信息</view>
      
      <view class="form-item">
        <view class="form-label">真实姓名</view>
        <view class="form-value-readonly">{{formData.realName || '未设置'}}</view>
      </view>
      
      <view class="form-item">
        <view class="form-label">身份证号</view>
        <view class="form-value-readonly">{{formData.idCard || '未设置'}}</view>
      </view>
      
      <view class="form-item">
        <view class="form-label">性别</view>
        <view class="form-value-readonly">{{genderOptions[genderIndex].label}}</view>
      </view>
    </view>

    <view class="form-section">
      <view class="section-title">可修改信息</view>
      
      <view class="form-item">
        <view class="form-label">手机号码</view>
        <input class="form-input" name="phone" type="number" maxlength="11" value="{{formData.phone}}" placeholder="请输入手机号码" />
      </view>
    </view>

    <view class="form-section">
      <view class="section-title">账号安全</view>
      
      <view class="form-item form-item-clickable" bindtap="goToChangePassword">
        <view class="form-label">修改密码</view>
        <view class="form-value">
          <text class="form-value-text">••••••••</text>
          <text class="form-arrow">›</text>
        </view>
      </view>
    </view>

    <view class="btn-group">
      <button class="btn-primary" formType="submit">保存手机号</button>
    </view>
  </form>
</view>

