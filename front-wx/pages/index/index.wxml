<!--首页-->
<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="user-greeting">你好，{{userName}}</view>
    <view class="user-phone">{{userPhone}}</view>
  </view>

  <!-- 核心功能 -->
  <view class="section-title">合同管理</view>
  <view class="contract-stats">
    <view class="stat-item" bindtap="goToPendingContracts">
      <view class="stat-number pending">{{pendingCount}}</view>
      <view class="stat-label">待签署</view>
    </view>
    <view class="stat-item" bindtap="goToSignedContracts">
      <view class="stat-number signed">{{signedCount}}</view>
      <view class="stat-label">已签署</view>
    </view>
  </view>

</view>
