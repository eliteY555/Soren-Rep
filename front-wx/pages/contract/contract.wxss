/* pages/contract/contract.wxss */
.contract-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  padding-bottom: 20rpx;
}

/* 标签栏 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  position: relative;
  transition: all 0.2s;
}

.tab-text {
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: #667eea;
  font-weight: 600;
  font-size: 32rpx;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
}

/* 合同列表 */
.contract-list {
  padding: 20rpx;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 合同卡片 */
.contract-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.contract-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
}

.contract-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.contract-no {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.contract-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-draft {
  background-color: #f0f0f0;
  color: #999;
}

.status-pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.status-effective {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-rejected {
  background-color: #fff1f0;
  color: #f5222d;
}

.status-expired {
  background-color: #f0f0f0;
  color: #999;
}

/* 合同信息 */
.contract-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-label {
  color: #999;
  flex-shrink: 0;
}

.info-value {
  color: #333;
  flex: 1;
}

/* 合同页脚 */
.contract-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  overflow: hidden;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  touch-action: none;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  padding: 0 10rpx;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 40rpx;
  -webkit-overflow-scrolling: touch;
}

/* 签名弹窗专用样式 */
.modal.sign-modal .modal-body {
  overflow-y: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.modal-footer {
  padding: 20rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

/* 详情 */
.detail-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #1890ff;
}

.detail-row {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.detail-label {
  color: #666;
  flex-shrink: 0;
  width: 200rpx;
}

.detail-value {
  color: #333;
  flex: 1;
}

.status-badge {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

/* 按钮 */
.btn-primary, .btn-secondary, .btn-download {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
}

.btn-sign {
  flex: 2;
  font-size: 36rpx;
}

.btn-secondary {
  background-color: #f5f7fa;
  color: #333;
}

.btn-secondary:active {
  background-color: #e8eaed;
}

.btn-download {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(82, 196, 26, 0.3);
}

.btn-download:active {
  transform: scale(0.98);
}

/* 签名 */
.sign-hint {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.canvas-container {
  border: 2rpx dashed #d9d9d9;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fafafa;
  display: flex;
  justify-content: center;
  align-items: center;
  touch-action: none;
  overflow: hidden;
}

.sign-canvas {
  background-color: #fff;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  touch-action: none;
}
