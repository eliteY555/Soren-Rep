/* 离职电子签名页面样式 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 30rpx;
  padding-bottom: 140rpx;
}

/* 离职信息 */
.offboard-info {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.info-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 4rpx solid #f5f5f5;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

.info-item {
  padding: 24rpx;
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
}

.info-item.highlight {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border: 2rpx solid #91d5ff;
}

.item-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.info-item.highlight .item-label {
  color: #0958d9;
}

.item-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.info-item.highlight .item-value {
  color: #1890ff;
}

/* 签名区域 */
.sign-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.sign-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.required {
  color: #ff4757;
  margin-right: 6rpx;
}

.sign-canvas {
  width: 100%;
  height: 400rpx;
  border: 6rpx dashed #1890ff;
  border-radius: 24rpx;
  background: #fafafa;
}

.sign-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.btn-clear,
.btn-preview {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: 4rpx solid #e8e8e8;
  background: #fff;
  font-weight: 500;
}

.btn-clear {
  border-color: #ff4d4f;
  color: #ff4d4f;
}

.btn-preview {
  border-color: #1890ff;
  color: #1890ff;
}

/* 警告提示 */
.warning-box {
  background: linear-gradient(135deg, #fffbe6 0%, #fff1b8 100%);
  border-left: 8rpx solid #faad14;
  border-radius: 16rpx;
  padding: 28rpx;
}

.warning-title {
  font-size: 28rpx;
  color: #0958d9;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #ad8b00;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 24rpx;
  z-index: 999;
}

.btn-cancel {
  flex: 1;
  height: 96rpx;
  background: #f5f5f5;
  color: #666;
  border: 4rpx solid #e8e8e8;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.btn-confirm {
  flex: 1;
  height: 96rpx;
  background: linear-gradient(135deg, #1890ff 0%, #0958d9 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

