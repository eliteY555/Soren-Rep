/* 离职申请详情页面样式 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 30rpx;
}

/* 状态卡片 */
.status-card {
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 32rpx;
  border-left: 8rpx solid #999;
}

.status-card.status-pending {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border-left-color: #1890ff;
}

.status-card.status-success {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
  border-left-color: #52c41a;
}

.status-card.status-error {
  background: linear-gradient(135deg, #fff2f0 0%, #ffccc7 100%);
  border-left-color: #ff4d4f;
}

.status-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.status-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  background: rgba(255,255,255,0.5);
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.status-pending .status-title {
  color: #0958d9;
}

.status-success .status-title {
  color: #389e0d;
}

.status-error .status-title {
  color: #cf1322;
}

.status-desc {
  font-size: 26rpx;
}

.status-pending .status-desc {
  color: #ad6800;
}

.status-success .status-desc {
  color: #52c41a;
}

.status-error .status-desc {
  color: #ff4d4f;
}

/* 详情卡片 */
.detail-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 4rpx solid #f5f5f5;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #1890ff 0%, #0958d9 100%);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  color: #666;
}

.detail-value {
  color: #333;
  font-weight: 500;
  text-align: right;
  max-width: 60%;
  word-wrap: break-word;
}

/* 时间轴 */
.timeline {
  padding-left: 48rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 48rpx;
  border-left: 4rpx solid #e8e8e8;
  padding-left: 48rpx;
}

.timeline-item:last-child {
  border-left: 4rpx solid transparent;
}

.timeline-dot {
  position: absolute;
  left: -14rpx;
  top: 4rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #e8e8e8;
}

.timeline-dot.success {
  background: #52c41a;
  box-shadow: 0 0 0 6rpx rgba(82, 196, 26, 0.2);
}

.timeline-dot.pending {
  background: #1890ff;
  box-shadow: 0 0 0 6rpx rgba(24, 144, 255, 0.2);
}

.timeline-content {
  background: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 20rpx;
}

.timeline-content.success {
  background: linear-gradient(135deg, #f6ffed 0%, #ffffff 100%);
  border: 2rpx solid #d9f7be;
}

.timeline-content.pending {
  background: #e6f7ff;
  border: 2rpx solid #bae7ff;
}

.timeline-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.timeline-content.success .timeline-title {
  color: #52c41a;
}

.timeline-content.pending .timeline-title {
  color: #1890ff;
}

.timeline-desc {
  color: #999;
  font-size: 24rpx;
  line-height: 1.6;
}

.timeline-content.pending .timeline-desc {
  color: #ad6800;
  font-weight: 500;
}

/* 提示框 */
.info-box {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border-left: 8rpx solid #1890ff;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 26rpx;
  color: #0958d9;
  line-height: 1.6;
}

.success-box {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
  border-left: 8rpx solid #52c41a;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 26rpx;
  color: #389e0d;
  line-height: 1.6;
}

.error-box {
  background: linear-gradient(135deg, #fff2f0 0%, #ffccc7 100%);
  border-left: 8rpx solid #ff4d4f;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 26rpx;
  color: #cf1322;
  line-height: 1.6;
}

